{
	"compilerOptions": {
		"lib": [
			"es2019",
			"es2020",
			"es2022"
		],
		"types": [
			"node"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es2019",
		"outDir": "./dist/",
		"sourceMap": true,
		"strict": true,
		"declaration": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"removeComments": true,
		"newLine": "lf",
		"skipLibCheck": true,
		"typeRoots": [
			"./node_modules/@types",
			"./src/types"
		]
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
} 